<li id="comment-<%= comment._id %>">
    <p>
        <%= comment.content %>
        <br>
        <small>
            <%= comment.user.name %>
        </small>

        <% if(locals.user && (locals.user.id == comment.user.id || locals.user.id == post.user.id)){%>
            <small>
                <a class="delete-comment-button" href="/comments/destroy/<%= comment.id %>">X</a>
            </small>
        <%}%>

    </p>
</li>